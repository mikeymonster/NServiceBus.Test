@model MessageViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <form asp-action="Index" method="post" defaultButton="btnSubmit">
        <label asp-for="Message">Message:</label>
        <input asp-for="Message" value="@Model.Message" />
        <input id="btnSubmit" class="button" type="submit" value="Send message">
    </form>

</body>
</html>
